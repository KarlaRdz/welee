<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latinname</th>
      <th>Weight</th>
      <th>Size</th>
      <th>Price</th>
      <th>Description</th>
      <th>Sex</th>
      <th>Typeani</th>
      <th>Observations</th>
      <th>Linkfb</th>
      <th>Animalcat</th>
      <th>Active</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.latinName %></td>
        <td><%= animal.weight %></td>
        <td><%= animal.size %></td>
        <td><%= animal.price %></td>
        <td><%= animal.description %></td>
        <td><%= animal.sex %></td>
        <td><%= animal.typeani %></td>
        <td><%= animal.observations %></td>
        <td><%= animal.linkfb %></td>
        <td><%= animal.animalcat_id %></td>
        <td><%= animal.active %></td>
        <td><%= animal.photo %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

